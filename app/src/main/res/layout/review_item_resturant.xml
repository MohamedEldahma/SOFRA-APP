<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/album_dp_10"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rest_nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_rest_name"
            android:layout_alignParentStart="true"
            android:padding="@dimen/album_dp_6"
            />
        <RatingBar
            android:id="@+id/rting_coment"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/album_dp_6"
            android:layout_marginTop="@dimen/album_dp_6"
            android:layout_marginStart="@dimen/album_dp_6"
            android:layout_alignParentEnd="true"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/coloryellow"
            android:rating="3"
            android:stepSize="1"
            android:layout_marginBottom="@dimen/album_dp_4"


            />
        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rting_coment"
            android:text="@string/string_date"
            android:layout_margin="@dimen/album_dp_6"
            android:layout_alignParentEnd="true"



            />

        <TextView
            android:id="@+id/text_coment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_date"
            android:text="@string/string_rest_rev"
            android:layout_margin="@dimen/album_dp_6"
            android:layout_alignParentStart="true"



            />










    </RelativeLayout>



</android.support.v7.widget.CardView>