<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:paddingBottom="@dimen/album_sp_14"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/album_sp_14"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_us"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/album_dp_20"

        />

    <ImageButton
        android:id="@+id/ptt_img_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_setting"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/album_dp_20"
        android:clickable="true"

        />

    <TextView

        android:id="@+id/text_welcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/nav_header_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@id/imageView"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/text_View_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle"
        android:layout_below="@id/text_welcom"
        android:layout_toLeftOf="@id/imageView"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:textSize="@dimen/album_sp_16"
        />


</RelativeLayout>
