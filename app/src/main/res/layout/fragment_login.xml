<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="@drawable/ic_background_white"
       >


    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_text"
        android:textColor="@color/colorBlack"
        android:drawableStart="@drawable/signin_icon"
        android:textSize="@dimen/album_dp_15"
        android:gravity="center"
        android:layout_marginTop="@dimen/album_dp_50"
        android:layout_marginStart="@dimen/album_dp_100"
        android:layout_marginEnd="@dimen/album_dp_100"
        />


    <EditText
        android:id="@+id/id_edit_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:layout_marginStart="@dimen/album_dp_40"
        android:layout_marginEnd="@dimen/album_dp_40"
        android:layout_marginTop="@dimen/album_dp_40"
        android:background="@drawable/ic_background_white"
        android:hint="hmada.mousa2013@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="@dimen/album_dp_10"
        android:saveEnabled="true"
        />


    <EditText
        android:id="@+id/id_edit_Password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:layout_marginStart="@dimen/album_dp_40"
        android:layout_marginEnd="@dimen/album_dp_40"
        android:layout_marginTop="@dimen/album_dp_20"
        android:background="@drawable/ic_background_white"
        android:hint="20132019"
        android:layoutDirection="rtl"
        android:padding="@dimen/album_dp_10"
        android:inputType="numberPassword"
        />

    <Button
        android:id="@+id/ptt_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:layout_marginStart="@dimen/album_dp_40"
        android:layout_marginEnd="@dimen/album_dp_40"
        android:layout_marginTop="@dimen/album_dp_20"
        android:background="#198A51"
        android:text="@string/sing_in"
        />
    <TextView
        android:id="@+id/ptt_text_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_forget_password"
        android:gravity="center"
        android:layout_marginTop="@dimen/album_dp_20"
        android:textColor="@color/colorForButton1"
        android:textSize="@dimen/album_dp_20"
        android:layout_marginStart="@dimen/album_dp_40"
        android:layout_marginEnd="@dimen/album_dp_40"
        />


    <Button
        android:id="@+id/ptt_new_acount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:layout_marginStart="@dimen/album_dp_40"
        android:layout_marginEnd="@dimen/album_dp_40"
        android:layout_marginTop="@dimen/album_dp_20"
        android:background="@drawable/ic_backgroun_yellow"
        android:text="@string/new_acount"
        />


</LinearLayout>