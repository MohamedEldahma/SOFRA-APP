<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.frgment.clintorder.UserRegisterOrderFragment">
    <EditText
        android:id="@+id/name_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:background="@drawable/ic_background_white"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_4"
        android:hint="@string/string_name"
        android:inputType="textPersonName"
        android:padding="@dimen/album_dp_10"


        />
    <EditText
        android:id="@+id/email_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:background="@drawable/ic_background_white"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_10"
        android:padding="@dimen/album_dp_10"
        android:hint="@string/string_email"
        android:inputType="textEmailAddress"

        />
    <EditText
        android:id="@+id/phone_number_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:background="@drawable/ic_background_white"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_10"
        android:padding="@dimen/album_dp_10"
        android:hint="@string/string_phone"
        android:inputType="phone"
        android:textAlignment="textStart"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_40"
        android:background="@color/albumFontLight"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_6"
        >

        <EditText
            android:id="@+id/text_governorat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/albumFontLight"
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingTop="@dimen/album_dp_10"
            android:paddingRight="@dimen/album_dp_10"
            android:paddingBottom="@dimen/album_dp_6"
            android:layout_alignParentRight="true"

            />

        <Spinner
            android:id="@+id/user_spiner_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_40"
        android:background="@color/albumFontLight"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_6"
        >
        <EditText
            android:id="@+id/city_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingTop="@dimen/album_dp_10"
            android:paddingRight="@dimen/album_dp_10"
            android:paddingBottom="@dimen/album_dp_6"
            android:layout_alignParentRight="true"
            android:background="@color/albumFontLight"

            />

        <Spinner
            android:id="@+id/user_spiner_regions"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:spinnerMode="dropdown" />
    </RelativeLayout>




    <EditText
        android:id="@+id/descrip_adress"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_background_white"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_10"
        android:padding="@dimen/album_dp_10"
        android:hint="@string/string_descripleving"
        android:inputType="textEmailAddress"

        />
    <EditText
        android:id="@+id/password_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:background="@drawable/ic_background_white"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_10"
        android:hint="@string/string_password"
        android:inputType="textPassword"
        android:padding="@dimen/album_dp_10"
        android:textAlignment="textEnd"

        />
    <EditText
        android:id="@+id/confirm_password_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:background="@drawable/ic_background_white"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_10"
        android:padding="@dimen/album_dp_10"
        android:hint="@string/string_confirmpassword"
        android:inputType="textPassword"
        android:textAlignment="textEnd"


        />
    <Button
        android:id="@+id/register_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:background="#198A51"
        android:layout_marginStart="@dimen/album_dp_20"
        android:layout_marginEnd="@dimen/album_dp_20"
        android:layout_marginTop="@dimen/album_dp_10"
        android:text="@string/string_next"
        android:clickable="true"


        />





</LinearLayout>