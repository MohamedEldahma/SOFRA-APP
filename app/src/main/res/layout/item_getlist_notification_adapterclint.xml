<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="90dp">

    <RelativeLayout
        android:layout_margin="8dp"
        android:background="@drawable/ic_notification_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/notification_img_alert"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="27dp"
            android:src="@drawable/ic_notifications_black_24dp" />

        <TextView

            android:id="@+id/notification_alert_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/notification_img_alert"
            android:fontFamily="sans-serif-thin"
            android:text="عنوان التنبيه يظهر هنا"
            android:textColor="@color/colorgreen"
            android:textSize="@dimen/album_sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_alrt_date"
            android:drawablePadding="2dp"
            android:textColor="@color/colordark_gray"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:text="السبت 1 يناير 2017"
            android:fontFamily="sans-serif-thin"
            android:layout_below="@+id/notification_alert_address"
            android:layout_toLeftOf="@+id/notification_img_alert"
            android:drawableStart="@drawable/ic_date"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/notification_alert_time"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_below="@+id/notification_alert_address"
            android:layout_toLeftOf="@+id/notification_alrt_date"
            android:text="6:30 مساءاٍٍ"
            android:fontFamily="sans-serif-thin"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_watch_tim_later_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />










    </RelativeLayout>




</RelativeLayout>