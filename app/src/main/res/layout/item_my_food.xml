<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/my_ite_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_100"
        android:layout_margin="@dimen/album_dp_10"
        android:layoutDirection="ltr"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <ImageView
                android:id="@+id/photo_myitem"
                android:layout_width="@dimen/album_dp_100"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/album_dp_6"
                android:layout_marginEnd="@dimen/album_dp_6"
                android:layout_marginTop="@dimen/album_dp_6"

                />


            <TextView
                android:id="@+id/text_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/album_dp_6"
                android:layout_marginTop="@dimen/album_dp_6"
                android:layout_toLeftOf="@id/photo_myitem"
                android:text="@string/item_name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/album_sp_16"

                />


            <TextView
                android:id="@+id/text_descrip_name"
                android:layout_width="120dp"
                android:layout_height="@dimen/album_dp_50"
                android:layout_below="@id/text_item_name"
                android:layout_marginEnd="@dimen/album_dp_6"
                android:layout_marginTop="@dimen/album_dp_6"
                android:layout_toLeftOf="@id/photo_myitem"
                android:text="@string/item_descrip"
                android:textSize="@dimen/album_dp_10"

                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/album_dp_20"
            >
        <TextView
                android:id="@+id/neme_pric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_pric"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/album_sp_16"
                android:layout_gravity="center"
            android:layout_marginTop="@dimen/album_dp_20"

            />

            <TextView
                android:id="@+id/text_item_pric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pric_num"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack" />

            <!--<TextView-->
                <!--android:id="@+id/text_item_curancy"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/neme_pric"-->
                <!--android:layout_marginEnd="3dp"-->
                <!--android:layout_marginRight="3dp"-->
                <!--android:layout_toLeftOf="@id/text_item_pric"-->


                <!--android:text="@string/curranc_num"-->
                <!--android:textColor="@color/colorBlack" />-->


      </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>