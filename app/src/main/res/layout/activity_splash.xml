<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_splash" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="291dp"
            android:layout_height="186dp"
            android:layout_marginStart="@dimen/album_dp_50"
            android:layout_marginEnd="@dimen/album_dp_50"
            android:layout_marginTop="@dimen/album_dp_10"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_marginTop="@dimen/album_dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/splash_text"
            android:textColor="@color/albumPageLight"
            android:gravity="center"
            android:textSize="@dimen/album_sp_18"


            />

        <Button
            android:id="@+id/ptt_food_demand"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/album_dp_30"
            android:layout_marginEnd="@dimen/album_dp_30"
            android:layout_marginTop="@dimen/album_dp_50"
            android:background="@color/colorPrimary"
            android:text="@string/ptt_demend_food"
            android:textSize="@dimen/album_dp_15"
            android:textStyle="bold"


            />

        <Button
            android:id="@+id/ptt_food_sel"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/album_dp_30"
            android:layout_marginEnd="@dimen/album_dp_30"
            android:layout_marginTop="@dimen/album_dp_10"
            android:background="@color/colorPrimary"
            android:text="@string/ptt_sel_food"
            android:textSize="@dimen/album_dp_15"
            android:textStyle="bold"

            />
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/album_dp_50"
                android:layout_height="@dimen/album_dp_50"
                android:src="@drawable/ic_tweter"
                android:padding="@dimen/album_dp_1"
                android:layout_marginRight="@dimen/album_dp_30"
                />



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="53dp"
                android:layout_height="@dimen/album_dp_50"
                android:padding="@dimen/album_dp_1"
                android:src="@drawable/ic_insgrame"


                />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/splash_text2"
            android:textColor="@color/albumPageLight"
            android:gravity="center"



            />



    </LinearLayout>

</RelativeLayout>