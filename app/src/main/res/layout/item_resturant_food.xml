<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_resturant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/album_dp_6"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"


            >

            <ImageView
                android:id="@+id/item_imag_order"
                android:layout_width="@dimen/album_dp_100"
                android:layout_height="@dimen/album_dp_80"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/album_dp_6"
                android:layout_marginEnd="@dimen/album_dp_6"
                android:layout_marginTop="@dimen/album_dp_6"

                />

            <LinearLayout
                android:id="@+id/layout_one"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/album_dp_10"
                android:layout_marginTop="@dimen/album_dp_6"
                android:layout_toLeftOf="@id/item_imag_order"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resturant_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/album_dp_10"
                    android:paddingEnd="@dimen/album_dp_6"
                    android:text="@string/text_ftir_dmasq"
                    android:layout_marginEnd="@dimen/album_dp_6"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/album_dp_15" />

                <TextView
                    android:id="@+id/text_resturant_typ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/album_dp_10"
                    android:layout_marginTop="@dimen/album_dp_6"
                    android:text="@string/string_categoris"

                    android:textSize="@dimen/album_dp_10" />

                <RatingBar
                    android:id="@+id/rting_food"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/album_dp_6"
                    android:layout_marginTop="@dimen/album_dp_6"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/coloryellow"
                    android:rating="3"
                    android:stepSize="1"
                    android:layout_marginBottom="@dimen/album_dp_4"
                    android:layout_gravity="end"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/album_dp_20"
                android:layout_marginTop="@dimen/album_dp_10"
                android:layout_marginStart="@dimen/album_dp_6"
                android:layout_toLeftOf="@id/layout_one">

                <TextView
                    android:id="@+id/restaurant_avilblty_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/open_naw"
                    android:textColor="@color/colorgreen"
                    android:layout_marginEnd="@dimen/album_dp_6"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/minmum_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/album_dp_4"
                    android:layout_marginTop="@dimen/album_dp_20"
                    android:text="@string/order_minimum" />

                <!--<TextView-->
                <!--android:id="@+id/numb_minmum_order"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginEnd="@dimen/album_dp_30"-->
                <!--android:layout_marginTop="@dimen/album_dp_20"-->
                <!--android:layout_toLeftOf="@id/minmum_order"-->
                <!--android:text="60" />-->

                <TextView
                    android:id="@+id/cost_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/minmum_order"
                    android:layout_marginTop="@dimen/album_dp_10"
                    android:layout_marginEnd="@dimen/album_dp_4"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/album_dp_4"
                    android:text="@string/delivery_cost" />

                <!--<TextView-->
                <!--android:id="@+id/numb_cost_order"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/numb_minmum_order"-->
                <!--android:layout_marginEnd="@dimen/album_dp_30"-->
                <!--android:layout_marginRight="6dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_toLeftOf="@id/minmum_order"-->
                <!--android:text="60" />-->


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>